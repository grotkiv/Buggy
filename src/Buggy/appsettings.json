{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:o}|{Level:u4}|{SourceContext}|{Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path":  "./logs/buggy.log",
          "outputTemplate": "{Timestamp:o}|{Level:u4}|{SourceContext}|{Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AzureProject": {
    "Organization": "GreatJean",
    "Project": "FirstSteps"
  }
}
